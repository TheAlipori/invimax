---
import DressIcon from "../assets/dressIcon.astro";
import SuitIcon from "../assets/suitIcon.astro";
---

<h1
  class="font-gloock text-center text-5xl mb-5"
  data-aos="fade-up"
  data-aos-delay="400"
>
  Codigo de vestimenta
</h1>
<div class="w-full px-4 py-10 flex justify-center">
  <section
    class="w-full md:w-[60%] py-10 px-4 flex flex-col sm:flex-row gap-6 justify-center items-stretch"
  >
    <!-- Card Hombres -->
    <div
      class="flex-1 bg-white shadow-lg rounded-2xl p-6 text-center"
      data-aos="fade-up"
      data-aos-delay="400"
    >
      <div class="mx-auto w-[60px] h-[60px] text-blue-600 mb-4">
        <SuitIcon />
      </div>
      <h3 class="text-xl font-semibold mb-2 text-gray-800">Hombres</h3>
      <p class="text-gray-600 text-sm">
        Traje formal o guayabera elegante. Colores neutros o sobrios. Zapatos
        cerrados.
      </p>
    </div>

    <!-- Card Mujeres -->
    <div
      class="flex-1 bg-white shadow-lg rounded-2xl p-6 text-center"
      data-aos="fade-down"
      data-aos-delay="400"
    >
      <div class="mx-auto w-[60px] h-[60px] text-pink-600 mb-4">
        <DressIcon />
      </div>
      <h3 class="text-xl font-semibold mb-2 text-gray-800">Mujeres</h3>
      <p class="text-gray-600 text-sm">
        Vestido formal o cocktail. Evita el blanco. Tacones o sandalias
        elegantes.
      </p>
    </div>
  </section>
</div>
