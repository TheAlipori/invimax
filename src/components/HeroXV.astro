---
const { title, pareja, mensaje, imagen, novio, novia, evento } = Astro.props;
import "@fontsource/pattaya";
import "@fontsource/yesteryear";
import ScrollIcon from "../assets/ScrollIcon.astro";
---

<section
  class="w-screen h-dvh flex justify-center items-center relative bg-pink-200"
>
  <!-- Contenedor principal -->
  <div class="relative w-full h-full mx-auto overflow-hidden">
    <!-- Imagen con efecto suave -->
    <img
      src={imagen}
      alt="Foto de la pareja"
      class="w-full h-full object-cover transform scale-100"
      data-aos="zoom-in"
      data-aos-duration="1500"
      data-aos-easing="ease-out-quad"
    />

    <!-- BotÃ³n para reproducir canciÃ³n -->
    <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2">
      <button
        id="playBtn"
        class="bg-white/80 hover:bg-white text-rose-600 font-semibold px-6 py-3 rounded-full shadow-md flex items-center gap-2 backdrop-blur-md transition"
      >
        ðŸŽµ Reproducir canciÃ³n
      </button>
    </div>

    <!-- Elemento de audio oculto -->
    <audio id="bgMusic">
      <source src="/cancion.mp3" type="audio/mpeg" />
    </audio>
  </div>
</section>

<script>
  document.getElementById("playBtn").addEventListener("click", function () {
    const audio = document.getElementById("bgMusic");
    audio.play();
  });
</script>
