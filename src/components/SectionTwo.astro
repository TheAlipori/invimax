---
import Card from "./Card.astro";
import ChurchIcon from "../assets/churchIcon.astro";
import CalendarIcon from "../assets/calendarIcon.astro";
import ClockIcon from "../assets/ClockIcon.astro";
import NotasIcon from "../assets/notesIcon.astro";
---

<section class="w-full px-4 py-16 bg-white">
  <h1 class="font-gloock text-center text-5xl mb-5">Detalles</h1>

  <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Card 1 -->
    <div
      class="rounded-2xl p-6 shadow-md flex items-start gap-4"
      data-aos="flip-left"
      data-aos-delay="200"
    >
      <div class="text-3xl text-pink-600">
        <ChurchIcon />
      </div>
      <div>
        <h3 class="text-xl font-semibold text-gray-800">Lugar</h3>
        <p class="text-gray-600">Jard√≠n Los Encinos, Durango</p>
      </div>
    </div>

    <!-- Card 2 -->
    <div
      class="rounded-2xl p-6 shadow-md flex items-start gap-4"
      data-aos="flip-right"
      data-aos-delay="300"
    >
      <div class="text-3xl text-pink-600">
        <CalendarIcon />
      </div>
      <div>
        <h3 class="text-xl font-semibold text-gray-800">Fecha</h3>
        <p class="text-gray-600">22 de Noviembre de 2025</p>
      </div>
    </div>

    <!-- Card 3 -->
    <div
      class="rounded-2xl p-6 shadow-md flex items-start gap-4"
      data-aos="flip-up"
      data-aos-delay="400"
    >
      <div class="text-3xl text-pink-600">
        <ClockIcon />
      </div>
      <div>
        <h3 class="text-xl font-semibold text-gray-800">Hora</h3>
        <p class="text-gray-600">5:00 PM</p>
      </div>
    </div>

    <!-- Card 4 -->
    <div
      class="rounded-2xl p-6 shadow-md flex items-start gap-4"
      data-aos="flip-down"
      data-aos-delay="500"
    >
      <div class="text-3xl text-pink-600">
        <NotasIcon />
      </div>
      <div>
        <h3 class="text-xl font-semibold text-gray-800">Notas adicionales</h3>
        <p class="text-gray-600">
          El evento es al aire libre. Por favor, llegar 15 minutos antes.
        </p>
      </div>
    </div>
  </div>
</section>
